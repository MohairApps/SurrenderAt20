<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:LeagueOfNews.UWP.Converters">

    <!--NewsfeedListView-->
    <Style x:Key="DescriptionText" TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="Margin" Value="10,0,10,10"/>
        <Setter Property="Foreground" Value="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
    </Style>

    <Style x:Key="GridView" TargetType="GridView">
        <Setter Property="ItemContainerStyle" Value="{ThemeResource GridViewItemRevealBackgroundShowsAboveContentStyle}"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="Margin" Value="15,15,15,55"/>
    </Style>

    <converters:ImageConverter x:Key="ImageConverter"/>

</ResourceDictionary>
