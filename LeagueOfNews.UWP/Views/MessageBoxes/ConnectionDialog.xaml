<ContentDialog
    x:Class="LeagueOfNews.UWP.Views.MessageBoxes.ConnectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="No internet connection"
    Background="{ThemeResource SystemControlChromeMediumAcrylicElementMediumBrush}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonStyle="{StaticResource ButtonRevealStyle}"
    PrimaryButtonText="Try again"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    SecondaryButtonStyle="{StaticResource ButtonRevealStyle}"
    SecondaryButtonText="Exit"
    mc:Ignorable="d">

    <ContentDialog.Content>
        <TextBlock Text="This application requires an internet connection.&#x0a;Please check your internet connection and try again." TextWrapping="Wrap"/>
    </ContentDialog.Content>
</ContentDialog>