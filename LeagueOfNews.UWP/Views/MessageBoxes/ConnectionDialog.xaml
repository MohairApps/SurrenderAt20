<ContentDialog
    x:Class="LeagueOfNews.UWP.Views.MessageBoxes.ConnectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="No internet connection"
    Background="{ThemeResource SystemControlChromeMediumAcrylicElementMediumBrush}"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/MessageBoxesStyles/ConnectionDialogStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentDialog.Resources>

    <ContentDialog.Content>
        <Grid>
            <TextBlock Text="This application requires an internet connection.&#x0a;Please check your internet connection and try again." TextWrapping="Wrap"/>

            <Button
                Click="CheckButton_Click"
                Content="Try again"
                Style="{StaticResource CommonButton}"/>

            <Button
                HorizontalAlignment="Right"
                Click="ExitButton_Click"
                Content="Exit"
                Style="{StaticResource CommonButton}"/>
        </Grid>
    </ContentDialog.Content>
</ContentDialog>