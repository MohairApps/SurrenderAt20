<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:media="http://schemas.microsoft.com/winfx/2006/xaml/presentation">

    <Style x:Key="LoadingRing" TargetType="ProgressRing">
        <Setter Property="Canvas.ZIndex" Value="5"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="100"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="BackgroudParallaxImage" TargetType="Image">
        <Setter Property="Source" Value="ms-appx:///Assets/Images/NewsfeedAssets/Backgroundlight.png"/>
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <media:AcrylicBrush x:Key="CustomAcrylicBrush" BackgroundSource="Backdrop" TintOpacity="0.4" TintColor="#FF000000" FallbackColor="#FF008000" />
    
</ResourceDictionary>
