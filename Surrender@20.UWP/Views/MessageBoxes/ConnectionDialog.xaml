<ContentDialog
    x:Class="Surrender_20.UWP.Views.MessageBoxes.ConnectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="No internet connection"
    Background="{ThemeResource SystemControlChromeMediumAcrylicElementMediumBrush}">

    <Grid>
        <TextBlock Text="This application requires an internet connection.&#x0a;Please check your internet connection and try again." TextWrapping="Wrap"/>

        <Button Content="Check again" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="150" Style="{StaticResource ButtonRevealStyle}" Click="CheckButton_Click" />
        <Button Content="Exit" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="150" Style="{StaticResource ButtonRevealStyle}" Click="ExitButton_Click" />
    </Grid>
</ContentDialog>
