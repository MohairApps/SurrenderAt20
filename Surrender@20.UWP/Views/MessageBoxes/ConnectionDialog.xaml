<ContentDialog
    x:Class="Surrender_20.UWP.Views.MessageBoxes.ConnectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="No internet connection"
    Background="{ThemeResource SystemControlChromeMediumAcrylicElementMediumBrush}">

    <ContentDialog.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/MessageBoxesStyles/ConnectionDialogStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentDialog.Resources>

    <Grid>
        <TextBlock Text="This application requires an internet connection.&#x0a;Please check your internet connection and try again." TextWrapping="Wrap"/>

        <Button Style="{StaticResource CommonButton}" 
                Content="Try again" 
                Click="CheckButton_Click"/>

        <Button Style="{StaticResource CommonButton}"
                Content="Exit" 
                HorizontalAlignment="Right" 
                Click="ExitButton_Click"/>
    </Grid>
</ContentDialog>