<m:MvxWindowsPage
    xmlns:m="using:MvvmCross.Platforms.Uap.Views"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:appmodel="using:Windows.ApplicationModel"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    x:Class="Surrender_20.MainPageView"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlChromeLowAcrylicWindowBrush}">
    <m:MvxWindowsPage.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition/>
        </TransitionCollection>
    </m:MvxWindowsPage.Transitions>
    
    <Grid>
        <Grid x:Name="DragArea" Background="Transparent" HorizontalAlignment="Stretch" Height="40" VerticalAlignment="Top" Margin="50,0,0,0" Canvas.ZIndex="5"/>

        <NavigationView x:Name="NavView"
                        OpenPaneLength="200"
                        IsSettingsVisible="True"
                        IsBackButtonVisible="Collapsed"
                        PaneTitle="{x:Bind appmodel:Package.Current.DisplayName}">
            <i:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="SelectionChanged">
                    <core:InvokeCommandAction Command="{x:Bind VM.NavViewCommand}" CommandParameter="{x:Bind NavView.SelectedItem}"/>
                </core:EventTriggerBehavior>
            </i:Interaction.Behaviors>

            <NavigationView.MenuItems>
                <NavigationViewItemHeader Content="Pages"/>

                <NavigationViewItem Icon="Home" Content="Home"/>

                <NavigationViewItem Content="PBE">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph=""/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Releases">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph=""/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                
                <NavigationViewItem Content="Red Posts">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEC7A;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Icon="People" Content="Rotations"/>

                <NavigationViewItem Content="E-Sports">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph=""/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <NavigationView.Header>
                <Grid Margin="20,40,20,0">
                    <CommandBar DefaultLabelPosition="Right" OverflowButtonVisibility="Collapsed" Background="Transparent">
                        <CommandBar.PrimaryCommands>
                            <AppBarButton Icon="Refresh" Label="Refresh"/>
                        </CommandBar.PrimaryCommands>
                        
                        <CommandBar.Content>
                            <TextBlock Text="{x:Bind VM.Title}" Margin="12,14"/>
                        </CommandBar.Content>
                    </CommandBar>
                </Grid>
            </NavigationView.Header>
            <Frame x:Name="ContentFrame" Margin="20,0,20,0">
                <Image Source="ms-appx:///Assets/LargeTile.scale-400.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Frame>
        </NavigationView>
    </Grid>
</m:MvxWindowsPage>
