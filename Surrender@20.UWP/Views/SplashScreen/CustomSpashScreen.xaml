<Page
    x:Class="Surrender_20.UWP.Views.SplashScreen.CustomSpashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Surrender_20.UWP.Views.SplashScreen"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlChromeMediumAcrylicWindowMediumBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Assets/Square150x150Logo.scale-125.png" Stretch="None"/>
            <ProgressRing Style="{StaticResource ProgressRing}" IsActive="True" Height="30" Width="30" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
