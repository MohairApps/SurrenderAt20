<m:MvxWindowsPage xmlns:m="using:MvvmCross.Platforms.Uap.Views"
                  x:Class="Surrender_20.UWP.View.NewsfeedListView"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  mc:Ignorable="d" Tapped="MvxWindowsPage_Tapped">
    
    <m:MvxWindowsPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LoadingRing" TargetType="ProgressRing">
                <Setter Property="Canvas.ZIndex" Value="5"/>
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="100"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </m:MvxWindowsPage.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="480"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <ProgressRing Style="{StaticResource LoadingRing}"
                      IsActive="{Binding IsLoading}"/>

            <ScrollViewer CanContentRenderOutsideBounds="True">
                <GridView SelectionMode="Single"                     
                          HorizontalAlignment="Center"
                          ItemsSource="{Binding Newsfeeds}"
                          Tapped="GridView_Tapped"
                          Margin="0,15,0,0">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="440" Height="175">
                                <Image Source="{Binding Image}" 
                                       Stretch="UniformToFill"/>

                                <!--Height="60" VerticalAlignment="Bottom"-->
                                <StackPanel Orientation="Vertical"                         
                                            Background="{ThemeResource SystemControlChromeHighAcrylicElementMediumBrush}" 
                                            Padding="12">

                                    <!--TY GRUBA KURWO NIE ZAJMUJ TYLE MIEJSCA-->
                                    <TextBlock Text="{Binding Title}" 
                                               TextWrapping="Wrap"/>

                                    <!--Bindowanie czasu dodania postu nie działa - pusty string-->
                                    <TextBlock Text="[Binding Time]" 
                                               Style="{ThemeResource CaptionTextBlockStyle}" 
                                               Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>

                                    <!--TY GRUBA KURWO NIE ZAJMUJ TYLE MIEJSCA-->
                                    <TextBlock Text="{Binding ShortDescription}" 
                                               Style="{ThemeResource CaptionTextBlockStyle}" 
                                               Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>

                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid MaximumRowsOrColumns="1" Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Column="1" 
              Background="{ThemeResource SystemControlAcrylicWindowBrush}">
            <Frame x:Name="NewsfeedItemFrame">
                <Image x:Name="LogoImage" 
                       Source="ms-appx:///Assets/Images/NewsfeedAssets/BackgroundLight.png" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
            </Frame>
        </Grid>
    </Grid>
</m:MvxWindowsPage>
