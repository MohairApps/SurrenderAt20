<m:MvxWindowsPage
    xmlns:m="using:MvvmCross.Platforms.Uap.Views"
    x:Class="Surrender_20.UWP.View.NewsfeedListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Surrender_20.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <m:MvxWindowsPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LoadingRing" TargetType="ProgressRing">
                <Setter Property="Canvas.ZIndex" Value="5"/>
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="100"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>

            <AcrylicBrush x:Key="CustomAcrylicBrush" BackgroundSource="Backdrop" Opacity=".98" TintOpacity=".5" TintColor="#FF000000" FallbackColor="#FF008000" />
        </ResourceDictionary>
    </m:MvxWindowsPage.Resources>

    <Grid>
        <ProgressRing Style="{StaticResource LoadingRing}"
                      IsActive="{Binding IsLoading}"/>

        <GridView SelectionMode="Single"
                  HorizontalAlignment="Center"
                  ItemsSource="{Binding Newsfeeds}"
                  Tapped="GridView_Tapped">
            <GridView.ItemTemplate>

                <DataTemplate>
                    <Grid Width="450" Height="180" >
                        <Image Source="{Binding Image}" 
                               Stretch="UniformToFill"/>

                        <!--Height="60" VerticalAlignment="Bottom"-->
                        <StackPanel Orientation="Vertical"                         
                                    Background="{StaticResource CustomAcrylicBrush}" 
                                    Padding="12">

                            <!--TY GRUBA KURWO NIE ZAJMUJ TYLE MIEJSCA-->
                            <TextBlock Text="{Binding Title}"/>

                            <TextBlock Text="[Binding Time]" 
                                       Style="{ThemeResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid MaximumRowsOrColumns="1" Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
    </Grid>
</m:MvxWindowsPage>
